        </profile>

        <!-- PRODUCTION PROFILE -->
        <profile>
            <id>production</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <sesam.site>sesam.com</sesam.site>
                <!-- The parent Site -->
                <sesam.site.parent>generic.sesam:8080</sesam.site.parent>
            </properties>
        </profile>
    </profiles>


