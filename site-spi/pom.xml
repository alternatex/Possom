<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
      <parent>
          <groupId>schibstedsok</groupId>
          <artifactId>search-portal</artifactId>
          <version>2.6-SNAPSHOT</version>
      </parent>
    <artifactId>search-portal-site-spi</artifactId>
    <packaging>jar</packaging>
    <name>Sesam Search Engine Site SPI</name>
    <description>
        This is the project for Schibsted Søk's search-portal application. Aka Sesam.
        Read https://dev.schibstedsok.no/confluence/display/TECHDEV/Setting+up+Sesam for developing help.
    </description>
    <scm>
        <connection>scm:svn:https://dev.schibstedsok.no/svn/search-portal/trunk/site-spi</connection>
        <url>https://dev.schibstedsok.no/svn/search-portal/sesam.no/trunk/site-spi</url>
        <developerConnection>scm:svn:https://dev.schibstedsok.no/svn/search-portal/trunk/site-spi</developerConnection>
    </scm>

    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/conf</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
       </resources>
    </build>
    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <finalName>ROOT</finalName>
            </build>
            <properties>
                <sesam.site.default>generic.localhost:8080</sesam.site.default>
                <server.port>0</server.port><!-- Zero means use port from host-header. -->
                <queryServerURL.4>http://localhost:15500</queryServerURL.4>
                <queryServerURL.3>http://cobraprod.bos3.fastsearch.net:15100</queryServerURL.3>
                <queryServerURL.2>http://localhost:15200</queryServerURL.2>
                <queryServerURL.1>http://localhost:15100</queryServerURL.1>
                <msearch.configuration.url>http://mobile:8080/mobile/conf/msearch-client.properties</msearch.configuration.url>
                <mail.smtp.host>ssmail.schibstedsok.no</mail.smtp.host>
                <linkpulse.url>http://go.sesam.no/</linkpulse.url>
                <log.file>sesam</log.file>
                <linkpulse.enable>false</linkpulse.enable>
                <tokenevaluator.host>localhost</tokenevaluator.host>
                <tokenevaluator.port>15400</tokenevaluator.port>
                <!-- Picsearch server -->
                <picsearch.host>localhost</picsearch.host>
                <picsearch.port>15252</picsearch.port>
            </properties>
        </profile>
       <profile>
            <id>bleeding</id>
            <activation />
            <build>
                <finalName>ROOT.bleeding</finalName>
            </build>
            <properties>
                <sesam.site.default>generic.bleedingsearch.schibstedsok.no</sesam.site.default>
                <server.port>80</server.port>
            </properties>
        </profile>
        <profile>
            <id>test</id>
            <activation />
            <build>
                <finalName>ROOT.test</finalName>
            </build>
            <distributionManagement>
                <repository>
                    <id>Sesam-Searchdev</id>
                    <name>Schibsted Søk's Searchdev repository</name>
                    <url>scp://localhost/www/schibstedsok/data/httpd/dev.schibstedsok.no_443/htdocs/maven2-searchdev</url>
                </repository>
            </distributionManagement>
            <properties>
                <sesam.site.default>generic.searchdev.schibstedsok.no</sesam.site.default>
                <server.port>80</server.port>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation />
            <build>
                <finalName>ROOT.production</finalName>
            </build>
            <distributionManagement>
                <repository>
                    <id>Sesam-Production</id>
                    <name>Schibsted Søk's Production repository</name>
                    <url>scp://localhost/www/schibstedsok/data/httpd/dev.schibstedsok.no_443/htdocs/maven2-production</url>
                </repository>
            </distributionManagement>
            <properties>
                <sesam.site.default>generic.sesam.no</sesam.site.default>
                <server.port>80</server.port>
            </properties>
        </profile>
    </profiles>

</project>
