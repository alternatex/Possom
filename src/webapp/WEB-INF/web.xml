  <description>Filter chains</description>
  <display-name>Schibsted Filter chains</display-name>

  <!-- SITEMESH configuration -->
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
  </filter>
  <!-- SITMESH END -->
  
  
<filter>
 <filter-name>Entry Filter</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.EntryFilter</filter-class>
