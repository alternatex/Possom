  <servlet-mapping>
    <servlet-name>Nada BaseServlet</servlet-name>
    <url-pattern>/search/*</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
