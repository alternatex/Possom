<?xml version="1.0" encoding="UTF-8"?>
   
<web-app
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
   
  <description>Filter chains</description>
  <display-name>Schibsted Filter chains</display-name>

  <!-- SITEMESH configuration -->
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
  </filter>
  <!-- SITMESH END -->
  
 <!-- ACTIVE FILTERS -->
  
 <filter>
 <filter-name>Entry Filter</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.EntryFilter</filter-class>
  <init-param>
	<param-name>max-wait-time</param-name>
	<param-value>5000</param-value>
  </init-param> 
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Global Index</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.sensis.SensisFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Global Collection document overview</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.sensis.DocCountFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Norwegian Collection document overview</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.fast.DocCountFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Norwegian Webcrawl collection</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.fast.WebCrawlFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Media collection</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.fast.MediaCollectionFilter</filter-class>
   <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
   <init-param>
	<param-name>Filters to exclude</param-name>
	<param-value>no.schibstedsok.front.searchportal.filters.tv.TvFilter</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>Wiki collection</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.fast.WikiFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>true</param-value>
  </init-param>
</filter>

<filter>
 <filter-name>TV</filter-name>
 <filter-class>no.schibstedsok.front.searchportal.filters.tv.TvFilter</filter-class>
  <init-param>
	<param-name>standardPipeline</param-name>
	<param-value>false</param-value>
  </init-param>
</filter>

    <filter>
        <filter-name>Companies</filter-name>
        <filter-class>no.schibstedsok.front.searchportal.filters.fast.CompaniesFilter</filter-class>
        <init-param>
            <param-name>max-wait-time</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>standardPipeline</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>Persons</filter-name>
        <filter-class>no.schibstedsok.front.searchportal.filters.fast.FastPersonsFilter</filter-class>
        <init-param>
            <param-name>max-wait-time</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>standardPipeline</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>

<!-- Set up the filter chain, the filters are applied in the listed order -->
<filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/search/*</url-pattern>
</filter-mapping>

<filter-mapping>
  <filter-name>Entry Filter</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Global Collection document overview</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Norwegian Collection document overview</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Global Index</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Norwegian Webcrawl collection</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Media collection</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>Wiki collection</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
  <filter-name>TV</filter-name>
  <url-pattern>/search/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
</filter-mapping>

