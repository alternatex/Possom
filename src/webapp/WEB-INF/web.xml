    <servlet>
      <servlet-name>Nada BaseServlet</servlet-name>
      <servlet-class>no.schibstedsok.front.searchportal.servlet.BaseServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>Nada BaseServlet</servlet-name>
      <url-pattern>/search/*</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>MapServlet</servlet-name>
      <servlet-class>no.schibstedsok.front.searchportal.servlet.MapServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>MapServlet</servlet-name>
      <url-pattern>/map/*</url-pattern>
    </servlet-mapping>


  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

  <session-config>
    <session-timeout>15</session-timeout>
    <!-- 15 minutes -->
  </session-config>

</web-app>




