<html>
	<head>
		<meta name="decorator" content="maindecorator">
	</head>

    <body>


        <content tag="companies-results">
            #if ($result.getTotalDocumentsAvailable() > 0)

                #if ($result.getModifier())
                    #set ($baseURL = "?c=y&amp;q=$result.getQuery()&amp;mod=$result.getModifier()")
                #else
                    #set ($baseURL = "?c=y&amp;q=$result.getQuery()")
                #end
                <table id="company_result" class="page_margin_left">
                    <tr>
                        <td colspan="3">
                            <h1 class="search_query_h1">Du har søkt på $result.getQuery()</h1>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            <div id="navbar">
                                <div id="branch_header">Treff i bransjer</div>
                                <dl class="geo_list">
                                    #foreach ($category in $result.getCategoryModifiers())
                                        #if ($velocityCount <= 6)
                                            <dt><a href="$baseURL&amp;mod=$category.name">$category.name</a></dt>
                                            <dd>$category.count</dd>
                                        #end
                                    #end
                                </dl>
                                <div id="geo_header">Velg område</div>
                                <dl class="geo_list">
                                    <dt>Alna</dt>
                                    <dd>452</dd>
                                    <dt>Østensjø</dt>
                                    <dd>333</dd>
                                    <dt>Nordstrand</dt>
                                    <dd>310</dd>
                                    <dt>Nordre Aker</dt>
                                    <dd>298</dd>
                                    <dt>Frogner</dt>
                                    <dd>50</dd>
                                </dl>
                            </div>
                        </td>

                        <td valign="top">
                            <table id="result_table" width="420px">
                                <tr>
                                    <td>
                                        <dl class="result_list_header">
                                            <dt>Viser $result.getPager().getFirstHitOnPage() - #if ($result.getTotalDocumentsAvailable() < $result.getPager().getLastHitOnPage()) $result.getTotalDocumentsAvailable() #else $result.getPager().getLastHitOnPage() #end av $result.getTotalDocumentsAvailable() på $result.getQuery()</dt>
                                            <dd>#if ($result.getPager().getNumberOfPages() > 1)<a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()"><b>10 neste treff</b></a>#end</dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <dl class="result_list">
                                            #foreach ($item in $result.getCompaniesResults())
                                                <dt><b>$item.companyName</b><a href="$baseURL&amp;companyId=$item.companyId">Infoside</a></dt>
                                                <dd>&nbsp;</dd>
                                                <dt class="underline">$!{item.visitingAddress}#if ($item.visitingAddress && ($item.visitingZip || $item.visitingCity)),#end $!{item.visitingZip} $!{item.visitingCity}</dt>
                                                <dd class="underline">#if ($item.anyPhoneNumber) $item.anyPhoneNumber #else &nbsp; #end</dd>
                                            #end
                                        </dl>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td valign="top" width="370px">
                            <img src="../images/kart.jpg" alt="kart" id="map" />
                        </td>
                    </tr>
                </table>
            #else
                <div id="no_hits">
                    #parse("no-hits.vm")
                    <p>
                        Er du usikker på bransjebetegnelser? <a href="#">Velg bransje her</a><br />
                        <a href="#">Se eksempel på søkeord</a>
                    </p>
                </div>
            #end
        </content>


        <content tag="more-results-y">
            #*
            <tr>
                <td class="text_align_center">Søk også på $result.getQuery():</td>
            </tr>
            <tr>
                <td class="text_align_center">
                    <ul id="test">
                        <li class="d"><a href="?c=d&amp;q=$result.getQuery()">Magisøk</a></li>
                        <li class="m"><a href="?c=m&amp;q=$result.getQuery()">Nyhetsøk</a></li>
                        <li class="w"><a href="?c=w&amp;q=$result.getQuery()">Personsøk</a></li>
                        <li class="g"><a href="?c=g&amp;q=$result.getQuery()">Nettsøk verden</a></li>
                    </ul>
                </td>
            </tr>
            *#

            #set ($tab = "y")
            #if ($result.getModifier())
                #set ($extra = "&amp;mod=$result.getModifier()")
            #end
            #parse("verbosePager.vm")


        </content>

    </body>
</html>