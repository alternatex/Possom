<html>
	<head>
		<meta name="decorator" content="maindecorator">
	</head>


<body>
    <b>Companies Results</b>

    <content tag="companies-results">
        
        <div id="company_result">
            #foreach ($item in $result.getCompaniesResults())
                <li class="name">
                    <span class="company_name">$item.companyName</span>
                </li>
                <li class="adr">
                    <span class="company_address">$item.visitingAddress, $item.visitingZip $item.visitingCity</span>
                    <span class="company_phone">$!{item.phoneNumber}</span>
                </li>
                <li class="company_result_borderline">&nbsp;</li>
            #end
        </div>

    </content>

    <content tag="more-results">
        #set ($tab = "y")
        #parse("verbosePager.vm")
    </content>


</body>
</html>