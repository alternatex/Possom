#if($result)
<html>
	<head>
		<meta name="decorator" content="maindecorator">
	</head>

    <body>

        <content tag="sensis-results">
            #if ($result.getTotalDocumentsAvailable() > 0)
                 ($result.getTotalDocumentsAvailable())
            #end
        </content>

        <content tag="sensis-enriched">
            <div class="enriched_title">
                <a href="?s=g&q=$result.getQuery()" class="beriketTittel">TREFF I VERDEN</a><br/>
                <div class="beriketInnrykk">
                    #foreach( $item in $result.getResults() )
                        #if ($velocityCount <= 3)
                            <a href="$item.url">$item.title</a><br/>
                        #end
                    #end
                </div>
            </div>
        </content>

        <content tag="global-results">
            <div id="search_result">
                <div class="search_hits">
                    $result.getTotalDocumentsAvailable() TREFF I VERDEN
                </div>
                #foreach( $item in $result.getResults() )
                    <p>
                        <a href="$item.url" class="bigUrl">$item.title</a>
                        <div class="search_result_summary">$item.summary</div>
                        <a class="smallUrl" href="$item.url">$item.clickUrl</a>
                    </p>
                #end
                <p class="kilde">Nerdscore: $result.getFetchTime() ms</p>
            </div>
        </content>

        ## Nasty shortcut. The collection we've searched should be available from the $result
        <content tag="more-results-g">
            #set ($tab = "g")
            #parse("verbosePager.vm")
        </content>
    </body>
</html>
#end