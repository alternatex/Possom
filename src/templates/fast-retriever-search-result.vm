<html>
	<head>
		<meta name="decorator" content="maindecorator">
	</head>

    <body>

        #if ($result.getRetrieverResults().size() > 0)
            <content tag="media-enriched">
                #set ($baseURL = "?c=m&amp;q=$result.getQuery()")
                <div class="enrichment">
                    <a href="?c=m&amp;q=$result.getQuery()" class="enrichment_link">$result.getMediaDocumentsInIndex() Treff på <b>$result.getQuery()</b> i nyheter</a>
                    <ul>
                        #foreach( $item in $result.getRetrieverResults())
                            #if ($velocityCount <= 3)
                                <li>
                                    <a href="$item.url">$item.title</a>
                                    <span class="timestamp">
                                        $item.getNewsSource(),
                                        #if ($item.getDocumentAgeDays() == 1)
                                            $item.getDocumentAgeDays() dag
                                        #end
                                        #if ($item.getDocumentAgeDays() > 1)
                                            $item.getDocumentAgeDays() dager
                                        #end
                                        #if ($item.getDocumentAgeHours() == 1)
                                            $item.getDocumentAgeHours() time
                                        #end
                                        #if ($item.getDocumentAgeHours() > 1)
                                            $item.getDocumentAgeHours() timer
                                        #end
                                        #if ($item.getDocumentAgeHours() == 0)
                                            #if ($item.getDocumentAgeDays() == 0)
                                                #if ($item.getDocumentAgeMinutes == 1)
                                                    $item.getDocumentAgeMinutes() minutt
                                                #end
                                                #if ($item.getDocumentAgeMinutes > 1)
                                                    $item.getDocumentAgeMinutes() minutter
                                                #end
                                            #end
                                        #end
                                        gammel
                                    </span>
                                </li>
                            #end
                        #end
                    </ul>
                </div>
            </content>
        #end

        <content tag="media-collection-results">
            #if ($result.getRetrieverResults().size() > 0)
                <div id="search_result">
                    <dl class="search_hit_header">
                        <dt>Viser $result.getPager().getFirstHitOnPage() - #if ($result.getTotalDocumentsAvailable() < $result.getPager().getLastHitOnPage()) $result.getTotalDocumentsAvailable() #else $result.getPager().getLastHitOnPage() #end av $result.getTotalDocumentsAvailable() på $result.getQuery()</b></dt>
                        <dd>#if ($result.getPager().getNumberOfPages() > 1)<a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()" class="search_next_click">10 neste treff</a>#end</dd>
                    </dl>
                    #foreach( $item in $result.getRetrieverResults())
                        <p>
                            <a href="$item.url" class="search_big_url">$item.title</a>
                            <span class="timestamp">
                                $!item.getNewsSource(),
                                #if ($item.getDocumentAgeDays() == 1)
                                    $item.getDocumentAgeDays() dag
                                #end
                                #if ($item.getDocumentAgeDays() > 1)
                                    $item.getDocumentAgeDays() dager
                                #end
                                #if ($item.getDocumentAgeHours() == 1)
                                    $item.getDocumentAgeHours() time
                                #end
                                #if ($item.getDocumentAgeHours() > 1)
                                    $item.getDocumentAgeHours() timer
                                #end
                                #if ($item.getDocumentAgeHours() == 0)
                                    #if ($item.getDocumentAgeDays() == 0)
                                        #if ($item.getDocumentAgeMinutes == 1)
                                            $item.getDocumentAgeMinutes() minutt
                                        #end
                                        #if ($item.getDocumentAgeMinutes > 1)
                                            $item.getDocumentAgeMinutes() minutter
                                        #end
                                    #end
                                #end
                                gammel
                            </span>
                            <div class="search_summary">$item.summary</div>
                            <a class="search_small_url" href="$item.url">$item.clickUrl</a>
                        </p>
                    #end
                </div>
            #else
                <div id="no_hits">
                    #parse("no-hits.vm")
                </div>
            #end
        </content>

        ## Nasty shortcut. The collection we've searched should be available from the $result
        <content tag="more-results-m">
            #set ($tab = "m")
            #parse("verbosePager.vm")
        </content>
    </body>
</html>

